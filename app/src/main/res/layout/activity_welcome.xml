<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bu.fitnessfriend.fitnessfriend.welcome">

    <Button
        android:id="@+id/add_ex_btn"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginLeft="42dp"
        android:text="@string/add_exercise"
        app:layout_constraintLeft_toRightOf="@+id/add_food_btn"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ex_history_btn"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="42dp" />

    <Button
        android:id="@+id/ex_history_btn"
        android:layout_width="127dp"
        android:layout_height="66dp"
        android:text="@string/exercise_history"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="39dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="39dp" />

    <Button
        android:id="@+id/add_food_btn"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="@string/add_food"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/food_history_btn"
        app:layout_constraintRight_toRightOf="@+id/food_history_btn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/food_history_btn"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/food_history_btn"
        android:layout_width="129dp"
        android:layout_height="64dp"
        android:text="@string/food_history"
        app:layout_constraintRight_toLeftOf="@+id/ex_history_btn"
        android:layout_marginRight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/ex_history_btn"
        app:layout_constraintTop_toTopOf="@+id/ex_history_btn"
        android:layout_marginEnd="42dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/welcom_back_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome_back"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="34dp" />

    <TextView
        android:id="@+id/cal_burnt_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_burnt_label"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cal_eaten_lbl"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/cal_eaten_lbl" />

    <TextView
        android:id="@+id/ex_log_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exercises_today"
        android:textSize="17sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cal_burnt_lbl"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/cal_burnt_lbl"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/food_log_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_today"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ex_log_lbl"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ex_log_lbl"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/cal_eaten_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_eaten_label"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="43dp"
        android:layout_marginTop="86dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="43dp" />

</android.support.constraint.ConstraintLayout>
