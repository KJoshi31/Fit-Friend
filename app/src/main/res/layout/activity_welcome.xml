<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bu.fitnessfriend.fitnessfriend.welcome"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/welcom_back_lbl"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:text="@string/welcome_back"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/cal_eaten_lbl"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:text="@string/calories_eaten_label"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/welcom_back_lbl" />

    <TextView
        android:id="@+id/cal_burnt_lbl"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:text="@string/calories_burnt_label"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cal_eaten_lbl" />

    <TextView
        android:id="@+id/food_log_lbl"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:text="@string/food_today"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ex_log_lbl" />

    <TextView
        android:id="@+id/ex_log_lbl"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:text="@string/exercises_today"
        android:textSize="17sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cal_burnt_lbl" />

    <Button
        android:id="@+id/ex_history_btn"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_weight="0.29"
        android:text="@string/exercise_history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/add_ex_btn"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/food_history_btn"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/add_ex_btn"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:text="@string/add_exercise_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ex_history_btn"
        app:layout_constraintBaseline_toBaselineOf="@+id/ex_history_btn"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/add_food_btn"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:text="@string/add_food"
        app:layout_constraintRight_toLeftOf="@+id/food_history_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/msg_reminders_btn"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/food_history_btn"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:text="@string/food_history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/add_food_btn"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_food_btn"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/msg_reminders_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/message_reminders_option_label"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

</android.support.constraint.ConstraintLayout>
